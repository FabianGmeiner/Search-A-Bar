<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane
    fx:controller="AdminController"
    maxHeight="Infinity"
    maxWidth="Infinity"
    minHeight="0"
    minWidth="0"
    prefHeight="500.0"
    prefWidth="600.0"
    xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1">
      <VBox
          alignment="TOP_RIGHT"
          prefHeight="400.0"
          prefWidth="600.0"
          maxHeight="Infinity"
          maxWidth="Infinity"
          minHeight="0"
          minWidth="0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
            <Button
                onAction="#handleButtonLogout"
                alignment="TOP_RIGHT"
                contentDisplay="RIGHT"
                mnemonicParsing="false"
                text="Logout"
                defaultButton="true">
               <VBox.margin>
                  <Insets
                      bottom="10.0"
                      left="10.0"
                      right="10.0"
                      top="10.0" />
               </VBox.margin>
            </Button>
            <ListView
                    fx:id="mAdminListView"
                prefHeight="400.0"
                prefWidth="600.0"
                maxHeight="Infinity"
                maxWidth="Infinity">
               <VBox.margin>
                  <Insets
                      left="10.0"
                      right="10.0" />
               </VBox.margin>
            </ListView>
            <HBox
                alignment="CENTER_RIGHT"
                prefHeight="80.0"
                prefWidth="200.0"
                maxHeight="Infinity"
                maxWidth="Infinity"
                minHeight="0"
                minWidth="0">
                  <Button
                          onAction="#handleButtonNew"
                      alignment="CENTER"
                      contentDisplay="CENTER"
                      prefWidth="100.0"
                      text="Neue Bar" />
                  <Button
                          onAction="#handleButtonEdit"
                          fx:id="mAdminButtonEdit"
                      alignment="CENTER"
                      contentDisplay="CENTER"
                      disable="true"
                      mnemonicParsing="false"
                      prefWidth="100.0"
                      text="Bearbeiten">
                     <HBox.margin>
                        <Insets
                            left="20.0"
                            right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button
                          onAction="#handleButtonDelete"
                          fx:id="mAdminButtonDelete"
                      alignment="CENTER"
                      contentDisplay="CENTER"
                      disable="true"
                      mnemonicParsing="false"
                      prefWidth="100.0"
                      text="LÃ¶schen">
                     <HBox.margin>
                        <Insets
                            right="20.0" />
                     </HBox.margin>
                  </Button>
            </HBox>
      </VBox>
</AnchorPane>
